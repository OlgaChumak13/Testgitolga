select*from exams;
select *from results;
select *from students;

Select s.Student_ID, s.Surname, e.exam_id, r.mark
from students s
inner join results r
on s.Student_ID =r.Student_ID
inner join exams e
on e.Exam_ID =r.Exam_ID
where r.mark > 60
order by e.exam_id DESC;

SELECT s.Forename, s.Surname, e.Exam_name, r1.Mark
FROM results r1
JOIN students s ON r1.Student_ID = s.Student_ID
JOIN exams e ON r1.Exam_ID = e.Exam_ID
WHERE r1.Mark IN (
    SELECT Mark
    FROM results r2
    WHERE r1.Exam_ID = r2.Exam_ID
    GROUP BY r2.Exam_ID, r2.Mark
    HAVING COUNT(*) > 1
);